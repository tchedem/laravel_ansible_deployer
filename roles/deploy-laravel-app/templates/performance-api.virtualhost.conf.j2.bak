# HTTPS configurations
server {
    listen                  443 ssl http2;
    listen                  [::]:443 ssl http2;
    server_name             {{ PROJECT_DOMAIN_NAME }};
    root {{ PROJECT_PATH }}/public;
    index index.php;

    add_header X-Frame-Options "SAMEORIGIN";
    add_header X-Content-Type-Options "nosniff";
    # add_header Permissions-Policy "interest-cohort=()";
    # add_header Permissions-Policy "geolocation=(), microphone=(), camera=()";
    client_max_body_size 0;

    charset utf-8;

    # index.php fallback
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # Runtime to use with every request URI end with .php
    location ~ \.php$ {

        # Timeout in current runtime
        proxy_read_timeout 10s;
        proxy_connect_timeout 10s;
        proxy_send_timeout 10s;
        fastcgi_send_timeout 10s;
        fastcgi_read_timeout 10s;

        #fastcgi_pass unix:/var/run/php/php8.1-fpm.sock;
        fastcgi_pass unix:/var/run/php/php8.1-fpm-api_test.sock;
        fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
        include fastcgi_params;

    }

    # You can Customize error pages
    error_page 404 /index.php;

    # security
    # include                 nginxconfig.io/security.conf;

    # # SSL (Generated by certbot)
    #ssl_certificate         /etc/nginx/ssl/{{ PROJECT_DOMAIN_NAME }}.crt;
    #ssl_certificate_key     /etc/nginx/ssl/{{ PROJECT_DOMAIN_NAME }}.key;
    
    # ssl_trusted_certificate /etc/letsencrypt/live/api.{{ PROJECT_DOMAIN_NAME }}/chain.pem;
    # ssl_certificate         /etc/letsencrypt/live/api.{{ PROJECT_DOMAIN_NAME }}/fullchain.pem;
    # ssl_certificate_key     /etc/letsencrypt/live/api.{{ PROJECT_DOMAIN_NAME }}/privkey.pem;
    # ssl_trusted_certificate /etc/letsencrypt/live/api.{{ PROJECT_DOMAIN_NAME }}/chain.pem;

    access_log /var/log/nginx/{{ PROJECT_DOMAIN_NAME }}.log;
    error_log /var/log/nginx/{{ PROJECT_DOMAIN_NAME }}.err;

}

# HTTP redirect
server {
    listen      80;
    listen      [::]:80;
    server_name {{ PROJECT_DOMAIN_NAME }};

    location / {
        return 301 https://{{ PROJECT_DOMAIN_NAME }}$request_uri;
    }
}

