server {
    listen      80;
    listen      [::]:80;
    server_name {{ laravel_app1_name_domain_name }};
    root {{ laravel_app1_path }}/public;
    index index.php;

    add_header X-Frame-Options "SAMEORIGIN";
    add_header X-Content-Type-Options "nosniff";
    client_max_body_size 0;

    charset utf-8;

    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    location ~ \.php$ {
        # fastcgi_pass unix:/var/run/php/php8.2-fpm.sock;
        fastcgi_pass unix:/run/php/php8.2-fpm-{{ laravel_app1_name }}.sock;
        fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
        include fastcgi_params;
    }

    error_page 404 /index.php;

    access_log /var/log/nginx/{{ laravel_app1_name_domain_name }}.log;
    error_log /var/log/nginx/{{ laravel_app1_name_domain_name }}.err;
}
